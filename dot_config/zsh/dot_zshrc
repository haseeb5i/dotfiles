# Download zinit, if it's not here yet
ZINIT_HOME="${XDG_DATA_HOME}/zinit/zinit.git"
if [ ! -d $ZINIT_HOME ]; then 
    mkdir -p "$(dirname $ZINIT_HOME)"
    git clone https://github.com/zdharma-continuum/zinit.git "$ZINIT_HOME"
fi
source "${ZINIT_HOME}/zinit.zsh"

# Core configuration
zstyle ':completion:*:git-checkout:*' sort false
zstyle ':completion:*:descriptions' format '[%d]'
zstyle ':completion:*:warnings' format '%F{red}-- no matches found --%f'
zstyle ':completion:*' menu no
zstyle :history-search-multi-word page-size 10

# Add some plugins
zinit for \
  PZTM::history \
  OMZL::functions.zsh \
  OMZP::vi-mode

zinit wait lucid for \
  OMZL::completion.zsh \
  PZTM::directory \
  OMZL::git.zsh \
  OMZP::git \
  PZTM::terminal \
  PZTM::spectrum \
    atinit"zstyle ':omz:plugins:nvm' lazy yes" \
  OMZP::nvm

zinit wait lucid light-mode for \
  Aloxaf/fzf-tab \
    blockf atpull'zinit creinstall -q .' \
  zsh-users/zsh-completions \
     atload'_zsh_autosuggest_start; bindkey "^[l" autosuggest-accept' \
  zsh-users/zsh-autosuggestions \
  zdharma-continuum/history-search-multi-word \
    atclone"dircolors -b LS_COLORS > clrs.zsh" \
    atload'zstyle ":completion:*:default" list-colors ${(s.:.)LS_COLORS}' \
    atpull"%atclone" pick"clrs.zsh" nocompile'!' \
  trapd00r/LS_COLORS \
  wfxr/forgit \
  hlissner/zsh-autopair \
  urbainvaes/fzf-marks

zinit wait lucid atinit"zicompinit; zicdreplay" for \
  zdharma-continuum/fast-syntax-highlighting


# Add some bins
zinit wait"1" lucid light-mode from"gh-r" as"program" for \
  junegunn/fzf \
    mv"bat* -> bat" pick"bat/bat" \
  @sharkdp/bat \
    mv"fd* -> fd" pick"fd/fd" \
  @sharkdp/fd \
  eza-community/eza


# Load starship prompt
zinit ice as"command" from"gh-r" \
    atclone"./starship init zsh > init.zsh; ./starship completions zsh > _starship" \
    atpull"%atclone" src"init.zsh"
zinit light starship/starship


# keybindings
bindkey '^p' history-search-backward 
bindkey '^n' history-search-forward

# Development
(( $+commands[pyenv] )) && eval "$(pyenv virtualenv-init -)"
#(( $+commands[kubectl] )) && source <(kubectl completion zsh)

# Aliases
alias ls='ls --color'
alias kssh="kitten ssh"

