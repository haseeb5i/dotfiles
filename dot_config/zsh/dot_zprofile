#
# Executes commands at login; pre-zshrc
#

# Browser
if [[ -z "$BROWSER" && "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

# Editors
export EDITOR='nvim'
export VISUAL='nvim'

# Languages
if [[ -z "$LANG" ]]; then
  export LANG='en_GB.UTF-8'
fi

# Paths
# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Set the list of directories that cd searches.
# cdpath=(
#   $cdpath
# )

# Set the list of directories that Zsh searches for programs.
path=(
  /usr/local/{,s}bin(N)
  $HOME/.local/{,s}bin(N)
  $path
)

# Less
export PAGER='less'
# Set the default Less options, -X disables mouse scrolling
if [[ -z "$LESS" ]]; then
  export LESS='-g -i -M -R -S -w -X -z-4'
fi

# Development
# Node
export NODE_OPTIONS="--max-old-space-size=4096" # maybe remove
export NVM_DIR=$XDG_CONFIG_HOME/nvm
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc
export NODE_REPL_HISTORY=$XDG_DATA_HOME/node_repl_history
export PNPM_HOME=$XDG_DATA_HOME/pnpm
export BUN_INSTALL=$XDG_DATA_HOME/bun
path=(
  $PNPM_HOME
  $XDG_DATA_HOME/npm/bin
  $BUN_INSTALL/bin
  $path
)
alias yarn='yarn --use-yarnrc "$XDG_CONFIG_HOME/yarn/config"'

# Go
export GOPATH=$XDG_DATA_HOME/go
export PATH=$PATH:/usr/local/go/bin:$GOPATH/bin
export GOMODCACHE=$XDG_CACHE_HOME/go/mod

# Python
export PYENV_ROOT=$XDG_DATA_HOME/pyenv
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
(( $+commands[pyenv] )) && eval "$(pyenv init - zsh)"
export PYTHON_HISTORY=$XDG_STATE_HOME/python_history
export RUFF_CACHE_DIR=$XDG_CACHE_HOME/ruff
export MYPY_CACHE_DIR=$XDG_CACHE_HOME/mypy
export WORKON_HOME="$XDG_DATA_HOME/virtualenvs"

# Rust
export CARGO_HOME=$XDG_DATA_HOME/cargo
export RUSTUP_HOME=$XDG_DATA_HOME/rustup
[ -f "$CARGO_HOME/env" ] && \. "$CARGO_HOME/env"

# C#
export DOTNET_CLI_HOME="$XDG_DATA_HOME"/dotnet # some libs still use $HOME
export PATH=$PATH:$DOTNET_CLI_HOME/.dotnet/tools
export NUGET_PACKAGES="$XDG_CACHE_HOME"/NuGetPackages
export OMNISHARPHOME="$XDG_CONFIG_HOME"/omnisharp

# android
export ANDROID_HOME=$XDG_DATA_HOME/android-sdk
if [[ "$OSTYPE" == darwin* ]]; then
  export ANDROID_HOME="$HOME/Library/Android/sdk"
fi
export ANDROID_USER_HOME=$HOME/.android
export GRADLE_USER_HOME="$XDG_DATA_HOME"/gradle
path=(
  $ANDROID_HOME/emulator
  $ANDROID_HOME/platform-tools
  $path
)
export MIX_XDG="true" # elixir
