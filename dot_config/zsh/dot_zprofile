#
# Executes commands at login; pre-zshrc
#

# Browser
if [[ -z "$BROWSER" && "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

# Editors
export EDITOR='nvim'
export VISUAL='nvim'
export PAGER='less'

# Languages
if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi

# Paths
# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Set the list of directories that cd searches.
# cdpath=(
#   $cdpath
# )

# Set the list of directories that Zsh searches for programs.
path=(
  /usr/local/{,s}bin(N)
  $HOME/.local/{,s}bin(N)
  $path
)

# Less
# Set the default Less options, -X disables mouse scrolling
if [[ -z "$LESS" ]]; then
  export LESS='-g -i -M -R -S -w -X -z-4'
fi

# Development
# Node
export NVM_DIR="$XDG_CONFIG_HOME/nvm"
export PNPM_HOME="$XDG_CONFIG_HOME/pnpm"
# case ":$PATH:" in
#   *":$PNPM_HOME:"*) ;;
#   *) export PATH="$PNPM_HOME:$PATH" ;;
# esac
export PATH="$PNPM_HOME:$PATH" 

# Python
export PYENV_ROOT="$XDG_DATA_HOME/pyenv"
# command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
export PATH="$PYENV_ROOT/bin:$PATH"

# Scala
export COURSIER_BIN_DIR="$XDG_DATA_HOME/coursier/bin"
export PATH="$PATH:$COURSIER_BIN_DIR"

# Rust
export CARGO_HOME=$XDG_DATA_HOME/cargo
export RUSTUP_HOME=$XDG_DATA_HOME/rustup
[ -f "$CARGO_HOME/env" ] && \. "$CARGO_HOME/env"
export FOUNDRY_DIR=$XDG_CONFIG_HOME/foundry
# if [[ ":$PATH:" != *":${FOUNDRY_BIN_DIR}:"* ]]; then
#     export PATH="$PATH:$FOUNDRY_BIN_DIR"
# fi
export PATH="$PATH:$FOUNDRY_DIR/bin"

# >>> JVM installed by coursier >>>
export JAVA_HOME="/home/raven/.cache/coursier/arc/https/github.com/AdoptOpenJDK/openjdk8-binaries/releases/download/jdk8u292-b10/OpenJDK8U-jdk_x64_linux_hotspot_8u292b10.tar.gz/jdk8u292-b10"
export PATH="$PATH:/home/raven/.cache/coursier/arc/https/github.com/AdoptOpenJDK/openjdk8-binaries/releases/download/jdk8u292-b10/OpenJDK8U-jdk_x64_linux_hotspot_8u292b10.tar.gz/jdk8u292-b10/bin"
# <<< JVM installed by coursier <<<
